<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp">


    <com.jcdesenvolvimento.informativopv.Util.RoundedImageView
        android:layout_width="@dimen/tamano_perfil"
        android:layout_height="@dimen/tamano_perfil"
        android:id="@+id/imgFotoUsuario"
        android:src="@drawable/no_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/textoComum"
        android:text="Nome UsuÃ¡rio"
        android:id="@+id/tvNomeUsuario"
        android:textColor="@android:color/white"
        android:layout_below="@+id/imgFotoUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:id="@+id/ltEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:onClick="editarPerfil">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/textoMenor"
            android:text="@string/tEditarPerfil"
            android:textColor="@color/primaryText"
            android:id="@+id/tvEditarPerfil"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imgFotoUsuario"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:layout_marginRight="30dp"

            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgEditarPerfil"
            android:background="@drawable/ic_edit"
            android:layout_above="@+id/tvNomeContato"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </LinearLayout>



</LinearLayout>