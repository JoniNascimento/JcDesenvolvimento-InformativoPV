<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jcdesenvolvimento.informativopv.Fragment.InformativoFragment">

    <EditText
        android:id="@+id/edt_titulo_informativo_editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_padrao"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_titulo_informativo_editar"
        android:background="@color/primaryText"
        android:layout_margin="@dimen/margin_padrao"/>

    <ImageView
        android:id="@+id/img_titulo_informativo"
        android:layout_width="@dimen/tamanho_gift_add"
        android:layout_height="@dimen/tamanho_gift_add"
        android:layout_centerInParent="true"
        android:layout_below="@+id/separator"
        android:layout_marginTop="@dimen/margin_padrao"
        android:background="@drawable/no_image"/>
    <Button
        android:id="@+id/btn_salvar_informativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tSalvar"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_padrao"
        android:background="@drawable/bkg_botao_salvar"/>

</RelativeLayout>
